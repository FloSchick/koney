root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true

[Makefile]
indent_style = tab

[*.go]
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.py]
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.yml,*.yaml,*.json]
trim_trailing_whitespace = true
indent_size = 2

[*.md]
trim_trailing_whitespace = true
indent_size = 2
